<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <item android:left="5dp" android:right="5dp">
                <shape>
                    <gradient android:angle="270" android:endColor="#207ce5" android:startColor="#499bea"/>
                    <stroke android:width="2dp" android:color="#1c6fc7"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:left="5dp" android:right="5dp">
                <shape>
                    <gradient android:angle="270" android:endColor="#196bc2" android:startColor="#318ee6"/>
                    <stroke android:width="2dp" android:color="#1c6fc7"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>